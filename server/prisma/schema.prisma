generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum OrderType {
  MARKET
  LIMIT
  STOP
}

enum OrderSide {
  BUY
  SELL
}

enum OrderStatus {
  PENDING
  PARTIALLY_FILLED
  FILLED
  CANCELLED
  REJECTED
}

enum PositionStatus {
  OPEN
  CLOSED
}

enum Direction {
  LONG
  SHORT
}

enum AuditAction {
  ORDER_CREATED
  ORDER_FILLED
  ORDER_CANCELLED
  ORDER_REJECTED
  POSITION_OPENED
  POSITION_CLOSED
  BALANCE_UPDATED
  USER_REGISTERED
  USER_LOGIN
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  wallet    Wallet?
  orders    Order[]
  positions Position[]
  trades    Trade[]
  auditLogs AuditLog[]
  updatedAt DateTime   @updatedAt
  createdAt DateTime   @default(now())

  @@index([email])
  @@map("users")
}

model Wallet {
  id            String   @id @default(cuid())
  userId        String   @unique
  balance       Decimal  @default(0)
  frozenBalance Decimal  @default(0)
  totalEquity   Decimal  @default(0)
  user          User     @relation(fields: [userId], references: [id])
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())

  @@index([userId])
  @@map("wallets")
}

model Order {
  id           String    @id @default(uuid())
  userId       String
  symbol       String
  quantity     Decimal   @db.Decimal(20, 8)
  pricePerUnit Decimal   @db.Decimal(20, 8)
  orderType    String
  direction    String
  status       OrderStatus @default(PENDING)
  createdAt    DateTime  @default(now())
  filledAt     DateTime?
  cancelledAt  DateTime?
  updatedAt    DateTime  @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  positions Position[]
  trades    Trade[]

  @@index([userId])
  @@index([status])
  @@index([symbol])
  @@index([createdAt])
  @@map("orders")
}

model Position {
  id           String    @id @default(uuid())
  userId       String
  orderId      String
  symbol       String
  quantity     Decimal   @db.Decimal(20, 8)
  entryPrice   Decimal   @db.Decimal(20, 8)
  direction    String
  unrealizedPl Decimal   @default(0) @db.Decimal(20, 8)
  realizedPl   Decimal   @default(0) @db.Decimal(20, 8)
  status       String
  openedAt     DateTime  @default(now())
  closedAt     DateTime?
  updatedAt    DateTime  @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  order  Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  trades Trade[]

  @@index([userId])
  @@index([status])
  @@index([symbol])
  @@map("positions")
}

model Trade {
  id           String   @id @default(uuid())
  userId       String
  orderId      String
  positionId   String
  symbol       String
  entryPrice   Decimal  @db.Decimal(20, 8)
  exitPrice    Decimal  @db.Decimal(20, 8)
  direction    String
  realizedPl   Decimal  @db.Decimal(20, 8)
  fee          Decimal  @default(0) @db.Decimal(20, 8)
  netProfit    Decimal  @db.Decimal(20, 8)
  quantity     Decimal  @db.Decimal(20, 8)
  pricePerUnit Decimal  @db.Decimal(20, 8)
  tradeAt      DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  openedAt     DateTime
  closedAt     DateTime

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  position Position @relation(fields: [positionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([closedAt])
  @@index([symbol])
  @@map("trades")
}

model PriceHistory {
  id        String   @id @default(cuid())
  symbol    String
  price     Decimal  @db.Decimal(20, 8)
  timestamp DateTime
  open      Decimal  @db.Decimal(20, 8)
  high      Decimal  @db.Decimal(20, 8)
  low       Decimal  @db.Decimal(20, 8)
  close     Decimal  @db.Decimal(20, 8)
  volume    Decimal  @db.Decimal(30, 8)
  createdAt DateTime @default(now())

  @@index([symbol])
  @@unique([symbol, timestamp])
  @@index([timestamp])
  @@map("price_history")
}


model AuditLog {
  id            String       @id @default(uuid())
  userId        String
  action        AuditAction
  metadata      Json
  ipAddress     String?
  userAgent     String?
  createdAt     DateTime     @default(now())

  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
